<% layout('./layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="form-group">

            <div class="mb-3">
                <label for="title">Title</label>
                <input type="text" name="campground[title]" id="title" placeholder="TItle" class="form-control" required>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>

            <div class="mb-3">
                <label for="location">Location</label>
                <input type="text" name="campground[location]" id="location" placeholder="Location" class="form-control"required>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>

            
            <div class="mb-3">
                <label for="image" class="form-label custom-file-label">Add Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple required>
              </div>
            
            <div class="mb-3">
                <label for="price">Campground Price</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="price">$</span>
                  </div>
                  <input type="text" name="campground[price]" class="form-control" id="price" placeholder="0"  required>
                  <div class="valid-feedback">
                    Looks Good
                </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="description">Description</label>
                <textarea type="text" name="campground[description]" id="description" placeholder="Description" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>

            
            <button type="submit" class="btn btn-primary">Add Campground</button>

        </div>
        </form>
        <a href="/campgrounds">Home page</a>

    </div>
</div>

