<% layout('./layouts/boilerplate') %> 
<% customStyles = '<link rel="stylesheet" href="/stylesheets/navbar.css">' %>
<div id="map" style="width: 100%; height: 500px; border: 5px solid red; border-image: linear-gradient(to right, red, gold) 1;"></div>
<h1 class="text-center mt-4 mb-5 usc-text">All Events</h1>

<% for(let i of campgrounds) {  %> 
    <div class="card mb-4 usc-card"> <!-- Add margin bottom (mb-4) to space between cards -->
        <div class="row g-0"> <!-- Add g-0 class to remove gap between columns -->
            <div class="col-md-4">
                <% if(i.images.length) {%> 
               <img src="<%=i.images[0].url%>" alt="" class="img-fluid">
                <% } else {%>
                <img src="" alt="" class="img-fluid">
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=i.title%>
                    </h5>
                    <p class="card-text">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Veritatis hic impedit ad alias quae deleniti magni aperiam officia illum? Assumenda maiores eius expedita veniam quisquam, iure modi incidunt voluptates ea.
                    </p>
                    <p class="card-text">
                        <small class="text-muted"><%=i.location%></small>
                    </p>
                    <a href="/campgrounds/<%=i._id%>" class="btn btn-primary"> View <%=i.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% } %> 
    
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const campgrounds = {features:<%- JSON.stringify(campgrounds) %>}
    </script>
    <script src="/javascripts/clustermap.js"></script>
    